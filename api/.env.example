# API server
PORT=3000

# Optional HMAC for non-LINE webhooks (voice/SMS stubs)
# WEBHOOK_SECRET=

# LINE Messaging API
# Required for push/reply
LINE_CHANNEL_ACCESS_TOKEN=
# Required to verify webhook signatures
LINE_CHANNEL_SECRET=
# Optional: not required for Messaging API push/reply. Useful for LIFF/LINE Login etc.
LINE_CHANNEL_ID=

# Supabase
# Get these from https://app.supabase.com/project/[YOUR-PROJECT]/settings/api
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_KEY=

# Twilio
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=  # Your Twilio phone number (e.g., +815012345678)
TWILIO_WEBHOOK_URL=   # Your server URL for webhooks (e.g., https://your-domain.com/webhooks/twilio)
TWILIO_WEBHOOK_SECRET=  # Optional: for enhanced webhook signature verification

# Stripe
# Get these from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs (Plan-specific)
